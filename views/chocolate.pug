extends layout

block content
  h1= title
  -
    let items = results
  div(class= "container-fluid")
    div(class = "row")
      each item,index in items
        div(class= "col-sm-2", onclick=`buy(${index})`) Type: #{item.chocolatetype}
        div(class= "col-sm-2", onclick=`buy(${index})`) Brand: #{item.chocolate_brand}
        div(class= "col-sm-2", onclick=`buy(${index})`) Cost: #{item.cost}
        br
        br
        
  script.
    function buy(itemNum){
      alert(`Purchased item is ${itemNum+1}`)
    }     