extends layout

block content
  h1= title
  p Entered Rows: #{query.rows}
  p Entered Columns: #{query.cols}
  br
  - var rows = Number(query.rows); 
  - var cols = Number(query.cols);
  - if ((Number.isNaN(rows)) || (Number.isNaN(cols)))
    p Entered values are not integers.
  - else if (rows > 10 || rows < 1)
    p Row "number" range should be between 1 to 10.
  - else if (cols > 10 || cols < 1)
    p Column "number" range should be between 1 to 10.
  - else
    table#outer
      - for (var a = 1; a <= rows; a++)
        tr#middle
          - for (var b = 1; b <= cols; b++)
            - if (a === b)
              td= 1
            - else if (a === b + 1)
              td= 2
            - else if (b === a + 1)
              td= a-1
            - else
              td= 0
  
